doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1 Inicia Sesión en UpTask

            if error
                p.alerta.error= error

            form#formulario.caja.caja-login(action="/iniciar-sesion" method="POST")
                .campo
                    label(for="email") E-mail: 
                    input(type="email", name="email" placeholder="Tu Email" value= email)
                .campo
                    label(for="password") Password: 
                    input(type="password", name="password" placeholder="Tu Contraseña" value= password)
                .campo.enviar
                    input.boton(type="submit", value="Iniciar Sesión")
                .campo
                    a(href="/crear-cuenta") Crea una cuenta gratis